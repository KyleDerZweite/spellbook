# =============================================================================
# Spellbook Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Application Settings
# =============================================================================
PROJECT_NAME="Spellbook API"
DEBUG=false
REGISTRATION_MODE=OPEN

# Frontend URL (for CORS)
NEXT_PUBLIC_API_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000/api/v1
VITE_APP_NAME="Spellbook"

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=spellbook
POSTGRES_PASSWORD=spellbook_secret
POSTGRES_DB=spellbookdb
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres-dev:5432/${POSTGRES_DB}

# =============================================================================
# Authentication (Identity-Aware Proxy / Pangolin)
# =============================================================================
AUTH_HEADER=Remote-User
AUTH_EMAIL_HEADER=Remote-Email
AUTH_NAME_HEADER=Remote-Name
ENFORCE_TRUSTED_PROXY=true
# Use Podman/Docker bridge networks CIDR here (e.g., 10.89.0.0/16 is common for podman)
TRUSTED_PROXY_CIDRS=10.89.0.0/16,127.0.0.1/32,::1/128

# =============================================================================
# Initial Admin User (for auto-provisioning permissions)
# =============================================================================
ADMIN_EMAIL=admin@spellbook.local

# =============================================================================
# Pangolin NEWT Tunnel
# =============================================================================
NEWT_TOKEN=your_newt_tunnel_token_here

# =============================================================================
# Docker/Podman Compose Host Ports
# =============================================================================
FRONTEND_PORT=5173
BACKEND_PORT=8000
