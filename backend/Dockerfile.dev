FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        build-essential \
        postgresql-client \
        curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Copy project configuration
COPY pyproject.toml .

# Install dependencies using uv
RUN uv sync --frozen --no-install-project

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash appuser \
    && chown -R appuser:appuser /app
USER appuser

# Copy project
COPY --chown=appuser:appuser . .

EXPOSE 8000

# Healthcheck: query FastAPI /health endpoint using Python builtin, keep it lightweight
HEALTHCHECK --interval=10s --timeout=5s --start-period=30s --retries=5 \
    CMD python -c "import sys, json, urllib.request; r=urllib.request.urlopen('http://127.0.0.1:8000/health').read(); d=json.loads(r.decode('utf-8')); sys.exit(0 if d.get('status') in ['healthy', 'unhealthy'] else 1)"

# Default command
CMD ["uv", "run", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
