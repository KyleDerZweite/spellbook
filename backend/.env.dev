
# =============================================================================
# Spellbook Backend Development Configuration
# =============================================================================
# Copy this file to .env for local development

# =============================================================================
# Development Mode
# =============================================================================

DEBUG=true

# =============================================================================
# Database Configuration (Local Development)
# =============================================================================

DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/spellbookdb
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=spellbookdb
POSTGRES_PORT=5432
POSTGRES_DATA_PATH=./data/postgres

# =============================================================================
# Redis Configuration (Local Development)  
# =============================================================================

REDIS_URL=redis://localhost:6379
REDIS_PORT=6379
REDIS_DATA_PATH=./data/redis

# =============================================================================
# Security (Development - DO NOT use in production)
# =============================================================================

SECRET_KEY=development-secret-key-change-in-production-at-least-32-chars

# =============================================================================
# Application Settings
# =============================================================================

REGISTRATION_MODE=OPEN
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
NEXT_PUBLIC_API_URL=http://localhost:8000
FRONTEND_PORT=3000
BACKEND_PORT=8000

# =============================================================================
# External APIs
# =============================================================================

SCRYFALL_API_BASE=https://api.scryfall.com
SCRYFALL_RATE_LIMIT=10

# =============================================================================
# File Storage
# =============================================================================

UPLOAD_PATH=/tmp/spellbook-uploads
MAX_FILE_SIZE=10485760
UPLOADS_DATA_PATH=./data/uploads

# =============================================================================
# Pagination
# =============================================================================

DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# Initial Admin User
# =============================================================================

ADMIN_EMAIL=admin@spellbook.local
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123!
